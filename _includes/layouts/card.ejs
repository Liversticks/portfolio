<section class="bullet-card">
    <% if (cardImageSrc && cardImageAlt) { %>
        <div class="card-media">
            <% if (cardImageLink) { %>
                <a href="<%= cardImageLink %>" rel="noreferrer" target="_blank">
            <% } %>
            <img src="<%- cardImageSrc %>" alt="<%= cardImageAlt %>">
            <% if (cardImageLink) { %>
                </a>
            <% } %>
        </div>
    <% } %>
    <div class="card-content">
        <h1><%= cardTitle %></h1>
        <% if (cardSubtitle) { %>
            <h2><%= cardSubtitle %></h2>
        <% } %>
        <% if (cardDates) { %>
            <h3><%= cardDates %></h3>
        <% } %>
        <% if (cardLinks) { %>
            <% cardLinks.forEach(link => { %>
                <h4>
                    <% if (link.icon) { %>
                        <img src="/static/images/fa-icons/<%= link.icon %>.svg" alt="<%= link.icon %> logo" class="logo">
                    <% } %>
                    <a href="<%= link.target %>" rel="noreferrer" target="_blank"><%= link.description %></a>
                </h4>
            <% }) %>
        <% } %>
        <ul>
            <% cardBullets.forEach(item => { %>
                <li><%- item %></li>
            <% }) %>
        </ul>
    </div>
</section>